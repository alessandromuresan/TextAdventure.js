{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": [
        "src/core/shims",
        "./node_modules/@types"
    ],
    "inlineSourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}
